        <Label Content="输入直播间ID：https://live.bilibili.com/" HorizontalAlignment="Left" Margin="26,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="roomid" HorizontalAlignment="Left" Height="23" Margin="253,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242"/>
        <Button x:Name="OkButton" Content="确定" HorizontalAlignment="Left" Margin="343,87,0,0" VerticalAlignment="Top" Width="82" IsDefault="True" Height="28" Click="OkButton_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="430,87,0,0" VerticalAlignment="Top" Width="86" IsCancel="True" Height="28"/>
    </Grid>
</Window>
