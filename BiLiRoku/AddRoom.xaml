        xmlns:local="clr-namespace:BiliRoku"
        mc:Ignorable="d"
        Title="添加直播间" Height="170" Width="540" Icon="Resources/icon.ico" ResizeMode="NoResize" ShowInTaskbar="False" Background="#FFF6F6F6" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
